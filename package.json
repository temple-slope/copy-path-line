{
  "name": "copy-path-line",
  "displayName": "Copy Path with Line",
  "description": "Copy relative file path with line number to clipboard",
  "version": "0.0.5",
  "publisher": "temple-slope",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/temple-slope/copy-path-line"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "copy",
    "path",
    "line",
    "clipboard",
    "file path"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-path-line.copy",
        "title": "Copy Relative Path with Line Number"
      }
    ],
    "keybindings": [
      {
        "command": "copy-path-line.copy",
        "key": "shift+alt+cmd+l",
        "mac": "shift+alt+cmd+l",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^25.1.0",
    "typescript": "^5.3.0"
  }
}
